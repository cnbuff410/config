[user]
    name = windstorm
    email = likunarmstrong@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
	ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autocrlf = false

[alias]
    st = status
    ci = commit -a
    co = checkout
    fuckit = reset --hard
    ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    unstage = reset HEAD --
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

[merge]
    tool = vimdiff
